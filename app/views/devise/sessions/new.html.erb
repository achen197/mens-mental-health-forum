<section class="section-login">
	<div class="container login-container">

    <div class="column is-6 login-img">
     <%= image_tag("https://cdn1.vectorstock.com/i/1000x1000/83/85/set-of-isometric-people-vector-13598385.jpg", :alt => "rss feed") %>
    </div>

		<div class="column is-6 login-form">
			<div class="column is-8">
				<h2 class="title is-2">Login</h2>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				  <div class="field">
				  	<div class="control">
				    	<%= f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
				    </div>
				  </div>

				  <div class="field">
				  	<div class="control">
				    <%= f.input :password, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
						</div>
					</div>

					<div class="field">
				  	<div class="control">
				    <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
				  	</div>
					</div>

				  <%= f.button :submit, "Log in", class:"button primary-btn" %>
				<% end %>
				<br/>
				<%= render "devise/shared/links" %>
			</div>
		</div>
  </div>
</section>
